{
    "name": "jwt_auth",
    "version": "1.0.0",
    "description": "Jwt Authentication with Node.js",
    "main": "src/server.ts",
    "author": "Codevo",
    "license": "MIT",
    "scripts": {
        "start": "node ./dist/server.js",
        "compile": "tsc",
        "build": "tsc",
        "compile:watch": "tsc --watch",
        "postinstall": "tsc",
        "dev": "nodemon",
        "format": "prettier --write ./src",
        "lint": "eslint ./src --ext .vue,.js,.ts",
        "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
        "test": "jest || ECHO."
    },
    "dependencies": {
        "@typegoose/typegoose": "^9.12.1",
        "bcryptjs": "^2.4.3",
        "config": "^3.3.8",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mongoose": "^6.6.7",
        "redis": "^4.3.1",
        "serve-favicon": "^2.5.0",
        "ts-node-dev": "^2.0.0",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/lodash": "^4.14.186",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.3",
        "@types/serve-favicon": "^2.5.3",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "jest": "^29.2.1",
        "morgan": "^1.10.0",
        "typescript": "^4.8.4",
        "supertest": "^6.3.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "preset": "ts-jest",
        "verbose": true,
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{ts,js}",
            "!src/**/*.d.ts"
        ]
    }
}
